name := """call-auth-sample"""

version := "1.0-SNAPSHOT"

lazy val root = (project in file(".")).enablePlugins(PlayScala)

scalaVersion := "2.11.7"

libraryDependencies ++= Seq(
  jdbc,
  cache,
  specs2 % Test,
  "net.databinder.dispatch" %% "dispatch-core" % "0.11.3",
